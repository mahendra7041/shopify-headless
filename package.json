{
  "name": "shopify-headless",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch server.ts",
    "start": "node build/server/server.js",
    "build": "npm run build:server && npm run build:ssr && npm run build:client",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "tsc -b && vite build --outDir build/client",
    "build:ssr": "tsc -b && vite build --outDir build/ssr --ssr src/ssr.tsx",
    "lint": "eslint ."
  },
  "dependencies": {
    "@inertiajs/react": "^2.1.4",
    "@shopify/graphql-client": "^1.4.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-inertia": "^1.6.7",
    "express-session": "^1.18.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "shopify-api-types": "^0.0.5-alpha"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tsx": "^4.20.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
